            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/skoczek_transparent"/>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>